        :root {
            --color-yellow: #FFD93D;
            --color-white: #FFFFFF;
            --color-orange: #FF6B35;
            --color-text: #2D3748;
            --color-bg: #FFFEF7;
            --shadow-soft: 0 4px 6px rgba(255, 107, 53, 0.1);
            --shadow-hover: 0 10px 15px rgba(255, 107, 53, 0.2);
            --transition: all 0.3s cubic-bezier(0.68, -0.55, 0.265, 1.55);
        }

        body {
